<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>

    <!-- JDBC / MySQL -->
    <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="hibernate.connection.url">
      jdbc:mysql://localhost:3306/cr_system?useUnicode=true&amp;characterEncoding=utf8&amp;serverTimezone=America/Sao_Paulo
    </property>
    <property name="hibernate.connection.username">cruser</property>
    <property name="hibernate.connection.password">crsenha123</property>

    <!-- Hibernate -->
    <!-- Em Hibernate 6, o dialeto é detectado automaticamente; pode remover.
         Se quiser manter, tudo bem. -->
    <!-- <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property> -->

    <!-- >>> PERSISTÊNCIA REAL: não recria mais o schema <<< -->
    <property name="hibernate.hbm2ddl.auto">update</property>
    <!-- alternativas:
         validate  -> não altera nada, só valida o schema
         (remover) -> também não altera nada -->

    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.jdbc.use_get_generated_keys">true</property>

    <!-- Mapeamentos -->
    <mapping class="br.com.cr_system.Produto"/>
    <mapping class="br.com.cr_system.Comanda"/>
    <mapping class="br.com.cr_system.Pedido"/>
    <mapping class="br.com.cr_system.Pagamento"/>
    <mapping class="br.com.cr_system.Usuario"/>

  </session-factory>
</hibernate-configuration>